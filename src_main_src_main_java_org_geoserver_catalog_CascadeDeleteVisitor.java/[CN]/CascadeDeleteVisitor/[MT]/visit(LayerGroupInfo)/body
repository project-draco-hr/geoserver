{
  List<LayerGroupInfo> groups=catalog.getLayerGroups();
  for (  LayerGroupInfo group : groups) {
    if (group.getLayers().remove(layerGroupToRemove)) {
      if (group.getLayers().size() == 0) {
        visit(group);
      }
 else {
        catalog.save(group);
      }
    }
  }
  catalog.remove(layerGroupToRemove);
}
