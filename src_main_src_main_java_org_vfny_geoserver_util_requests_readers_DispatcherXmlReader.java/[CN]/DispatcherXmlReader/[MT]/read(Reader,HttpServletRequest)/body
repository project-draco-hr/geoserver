{
  InputSource requestSource=new InputSource(reader);
  XMLReader parser=new SAXParser();
  this.currentRequest=new DispatcherHandler();
  try {
    parser.setContentHandler(currentRequest);
    parser.parse(requestSource);
  }
 catch (  SAXException e) {
    if (e.getException() != null && e.getCause() == null) {
      e.initCause(e.getException());
    }
    throw new ServiceException(e,"XML request parsing error",DispatcherXmlReader.class.getName());
  }
catch (  IOException e) {
    throw new ServiceException(e,"XML request input error",DispatcherXmlReader.class.getName());
  }
}
