{
  try {
    String roles=parseRole(rolesForComponent.getRolePalette().getDefaultModelObjectAsString());
    ServiceAccessRule rule=new ServiceAccessRule((String)service.getConvertedInput(),(String)method.getConvertedInput(),roles);
    ServiceAccessRuleDAO dao=ServiceAccessRuleDAO.get();
    dao.addRule(rule);
    dao.storeRules();
    setResponsePage(ServiceAccessRulePage.class);
  }
 catch (  Exception e) {
    LOGGER.log(Level.SEVERE,"Error occurred while saving user",e);
    error(new ParamResourceModel("saveError",getPage(),e.getMessage()));
  }
}
