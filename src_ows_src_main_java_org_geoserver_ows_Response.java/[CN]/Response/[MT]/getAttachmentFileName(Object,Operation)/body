{
  String mimeType=getMimeType(value,operation);
  String opName=operation.getId();
  String name=null;
  if (mimeType != null) {
    name="geoserver";
    if (opName != null) {
      name=name + "-" + opName;
    }
    String[] typeParts=mimeType.split(";");
    String extension=typeParts[0].split("/")[0];
    name=name + "." + extension;
  }
  return name;
}
