{
  addLayer();
  LayerInfo l2=catalog.getLayerByName(l.getName());
  l2.setResource(null);
  try {
    catalog.save(l2);
    fail("setting resource to null should throw exception");
  }
 catch (  Exception e) {
  }
  l2.setResource(ft);
  catalog.save(l2);
  LayerInfo l3=catalog.getLayerByName(ft.getName());
  assertNotNull(l3);
}
