{
  if (SystemUtils.IS_OS_WINDOWS && WINDOWS_LENIENCY) {
    int MAX_ATTEMPTS=10;
    for (int i=0; i < MAX_ATTEMPTS; i++) {
      try {
        FileUtils.deleteDirectory(data);
      }
 catch (      IOException e) {
        if (i >= MAX_ATTEMPTS) {
          throw new IOException("Failed to clean up test data dir after " + MAX_ATTEMPTS + " attempts",e);
        }
        System.err.println("Error occurred while removing files, assuming " + "it's a transient lock, sleeping 1s and re-trying. Error message: " + e.getMessage());
        Thread.sleep(1);
      }
    }
  }
 else {
    FileUtils.deleteDirectory(data);
  }
}
