  restProperties.delete();
  String defaultRules="/**;GET=ROLE_ADMINISTRATOR\n" + "/**;POST,DELETE,PUT=ROLE_ADMINISTRATOR";
  FileUtils.writeStringToFile(restProperties,defaultRules);
}
