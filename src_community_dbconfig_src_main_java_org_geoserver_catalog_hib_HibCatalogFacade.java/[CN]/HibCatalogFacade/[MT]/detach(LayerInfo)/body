{
  Session s=sessionFactory.getCurrentSession();
  layer=(LayerInfo)s.createCriteria(LayerInfo.class).setFetchMode("styles",FetchMode.JOIN).setFetchMode("defaultStyle",FetchMode.JOIN).setFetchMode("attribution",FetchMode.JOIN).add(Restrictions.idEq(layer.getId())).uniqueResult();
  return layer;
}
