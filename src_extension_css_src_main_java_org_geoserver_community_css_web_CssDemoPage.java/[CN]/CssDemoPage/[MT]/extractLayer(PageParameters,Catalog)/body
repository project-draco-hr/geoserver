{
  if (params.containsKey("layer")) {
    String name=params.getString("layer");
    return catalog.getLayerByName(name);
  }
 else {
    LayerInfo states=catalog.getLayerByName("topp:states");
    if (states != null) {
      return states;
    }
 else {
      List<LayerInfo> layers=catalog.getLayers();
      if (layers.size() > 0) {
        return layers.get(0);
      }
 else {
        return null;
      }
    }
  }
}
