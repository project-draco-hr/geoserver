{
  JSON json=getAsJSON("/rest/resource/mydir/myres?operation=metadata&format=json");
  String expected="{\"ResourceMetadata\": {" + "  \"name\": \"myres\"," + "  \"parent\":   {"+ "    \"path\": \"/mydir\","+ "    \"link\": {"+ "       \"href\": \"http://localhost:8080/geoserver/rest/resources/mydir?format=json\","+ "       \"rel\": \"alternate\",                "+ "       \"type\": \"application/json\""+ "     }"+ "   },"+ "  \"lastModified\": \"" + FORMAT.format(myRes.lastmodified()) + "\","+ "  \"type\": \"resource\""+ "}}";
  JSONAssert.assertEquals(expected,(JSONObject)json);
}
