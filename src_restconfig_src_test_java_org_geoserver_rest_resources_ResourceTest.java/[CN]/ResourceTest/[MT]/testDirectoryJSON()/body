{
  JSON json=getAsJSON("/rest/resource/mydir?format=json");
  String expected="{\"ResourceDirectory\": {" + "\"name\": \"mydir\"," + "\"parent\":   {"+ "  \"path\": \"/\","+ "    \"link\":     {"+ "      \"href\": \"http://localhost:8080/geoserver/rest/resource/\","+ "      \"rel\": \"alternate\","+ "      \"type\": \"application/json\""+ "  }"+ "},"+ "\"lastModified\": \"" + FORMAT.format(myRes.lastmodified()) + "\","+ "  \"children\": {\"child\": [  {"+ "    \"name\": \"myres\","+ "    \"link\":     {"+ "      \"href\": \"http://localhost:8080/geoserver/rest/resource/mydir/myres\","+ "      \"rel\": \"alternate\","+ "      \"type\": \"application/octet-stream\""+ "    }"+ "  }]}"+ "}}";
  JSONAssert.assertEquals(expected,(JSONObject)json);
}
