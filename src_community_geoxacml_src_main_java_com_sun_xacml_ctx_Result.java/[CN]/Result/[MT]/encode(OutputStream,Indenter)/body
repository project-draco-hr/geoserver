{
  PrintStream out=new PrintStream(output);
  String indent=indenter.makeString();
  indenter.in();
  String indentNext=indenter.makeString();
  if (resource == null)   out.println(indent + "<Result>");
 else   out.println(indent + "<Result ResourceId=\"" + resource+ "\">");
  out.println(indentNext + "<Decision>" + DECISIONS[decision]+ "</Decision>");
  if (status != null)   status.encode(output,indenter);
  if (obligations.size() != 0) {
    out.println(indentNext + "<Obligations>");
    indenter.in();
    for (    Obligation obligation : obligations)     obligation.encode(output,indenter);
    indenter.out();
    out.println(indentNext + "</Obligations>");
  }
  indenter.out();
  out.println(indent + "</Result>");
}
