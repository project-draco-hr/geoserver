{
  if ((decision != DECISION_PERMIT) && (decision != DECISION_DENY) && (decision != DECISION_INDETERMINATE)&& (decision != DECISION_NOT_APPLICABLE))   throw new IllegalArgumentException("invalid decision value");
  this.decision=decision;
  this.resource=resource;
  if (status == null)   this.status=Status.getOkInstance();
 else   this.status=status;
  if (obligations == null)   this.obligations=new HashSet<Obligation>();
 else   this.obligations=obligations;
}
