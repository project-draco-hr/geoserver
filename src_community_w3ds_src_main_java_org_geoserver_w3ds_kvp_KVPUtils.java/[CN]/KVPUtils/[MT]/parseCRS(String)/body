{
  CoordinateReferenceSystem crs=null;
  try {
    crs=CRS.decode(crsstr);
  }
 catch (  NoSuchAuthorityCodeException e) {
    throw new IllegalArgumentException("Invalid mandatory parameter CRS (unrecognized authority code): " + crsstr);
  }
catch (  Exception e) {
    throw new IllegalArgumentException("Error parsing the mandatory parameter CRS: " + crsstr);
  }
  return crs;
}
