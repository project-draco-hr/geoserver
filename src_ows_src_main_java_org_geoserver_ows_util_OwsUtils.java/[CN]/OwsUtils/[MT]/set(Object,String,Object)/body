{
  Method s=setter(object.getClass(),property,value != null ? value.getClass() : null);
  if (s == null) {
    throw new IllegalArgumentException("No such property '" + property + "' for object "+ object);
  }
  try {
    s.invoke(object,value);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
