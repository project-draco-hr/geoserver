{
  final Long limit=Long.valueOf(2);
  CloseableIterator<T> it=list(type,filter,null,limit,null);
  T result=null;
  try {
    if (it.hasNext()) {
      result=it.next();
      if (it.hasNext()) {
        throw new IllegalArgumentException("Specified query predicate resulted in more than one object");
      }
    }
  }
  finally {
    it.close();
  }
  return result;
}
