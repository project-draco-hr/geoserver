{
  StringBuilder desc=new StringBuilder();
  for (  LayerInfo li : lgi.getLayers()) {
    desc.append(li.getResource().getPrefixedName());
    desc.append(": ");
    String lidesc=li.getResource().getAbstract();
    if (lidesc != null) {
      desc.append(lidesc);
    }
    desc.append("\n");
  }
  return desc.toString();
}
