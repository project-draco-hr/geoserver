{
  PolicyReader reader=null;
  try {
    if (validate)     reader=new PolicyReader(finder,logger,new File(GeoXACML.getPolicyXMLSchemaURL().toURI()));
 else     reader=new PolicyReader(finder,logger);
  }
 catch (  URISyntaxException e) {
  }
  readPolicies(policiesByReference,BY_REFERENCE_DIR,reader);
  readPolicies(policiesByRequest,BY_REQUEST_DIR,reader);
}
