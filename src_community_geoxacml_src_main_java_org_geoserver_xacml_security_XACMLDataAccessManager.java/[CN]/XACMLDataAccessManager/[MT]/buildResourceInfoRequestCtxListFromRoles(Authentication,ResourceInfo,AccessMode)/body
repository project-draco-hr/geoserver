{
  List<RequestCtx> resultList=new ArrayList<RequestCtx>();
  for (  GrantedAuthority role : auth.getAuthorities()) {
    XACMLRole xacmlRole=(XACMLRole)role;
    if (xacmlRole.isEnabled() == false)     continue;
    RequestCtx requestCtx=GeoXACMLConfig.getRequestCtxBuilderFactory().getResourceInfoRequestCtxBuilder(xacmlRole,resourceInfo,mode).createRequestCtx();
    resultList.add(requestCtx);
  }
  return resultList;
}
