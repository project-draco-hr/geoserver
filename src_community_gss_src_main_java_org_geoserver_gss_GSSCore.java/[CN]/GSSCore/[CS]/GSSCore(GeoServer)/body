{
  this.geoServer=geoServer;
  versionEnableTables();
  geoServer.addListener(new ConfigurationListenerAdapter(){
    @Override public void handlePostServiceChange(    ServiceInfo service){
      if (service instanceof GSSInfo) {
        versionEnableTables();
      }
    }
    @Override public void handlePostGlobalChange(    org.geoserver.config.GeoServerInfo global){
      versionEnableTables();
    }
  }
);
}
