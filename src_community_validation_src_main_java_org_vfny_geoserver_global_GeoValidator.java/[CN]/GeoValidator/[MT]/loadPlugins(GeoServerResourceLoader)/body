{
  Map plugIns=null;
  Map testSuites=null;
  try {
    Resource plugInDir=loader.get("plugIns");
    Resource validationDir=loader.get("validation");
    if (Resources.exists(plugInDir)) {
      plugIns=XMLReader.loadPlugIns(plugInDir.dir());
      if (Resources.exists(validationDir)) {
        testSuites=XMLReader.loadValidations(validationDir.dir(),plugIns);
      }
    }
  }
 catch (  Exception e) {
    org.geotools.util.logging.Logging.getLogger("org.vfny.geoserver.global").log(Level.WARNING,"loading plugins",e);
  }
  if (testSuites == null)   testSuites=new HashMap();
  if (plugIns == null)   plugIns=new HashMap();
  load(testSuites,plugIns);
}
