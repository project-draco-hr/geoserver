{
  return new Content<T>(){
    long next=0;
    T cache=null;
    @Override public T content(){
synchronized (this) {
        long now=System.currentTimeMillis();
        if (next < now) {
          next=now + unit.convert(delay,TimeUnit.MILLISECONDS);
          cache=watch.content();
        }
        return cache;
      }
    }
  }
;
}
