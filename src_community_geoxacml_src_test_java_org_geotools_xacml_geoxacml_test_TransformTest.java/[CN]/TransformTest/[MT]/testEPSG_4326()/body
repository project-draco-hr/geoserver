{
  PDP pdp=TestSupport.getPDP(TestSupport.getGeoXACMLFNFor("transform","EPSG_4326_Policy.xml"));
  RequestCtx request=null;
  try {
    request=RequestCtx.getInstance(new FileInputStream(TestSupport.getGeoXACMLFNFor("transform","EPSG_4326_Request.xml")));
  }
 catch (  Exception e) {
    e.printStackTrace();
    Assert.fail(e.getMessage());
  }
  ResponseCtx response=pdp.evaluate(request);
  Result result=(Result)response.getResults().iterator().next();
  assertTrue(result.getDecision() == Result.DECISION_PERMIT);
  assertTrue(result.getStatus().getCode().iterator().next().equals(Status.STATUS_OK));
}
