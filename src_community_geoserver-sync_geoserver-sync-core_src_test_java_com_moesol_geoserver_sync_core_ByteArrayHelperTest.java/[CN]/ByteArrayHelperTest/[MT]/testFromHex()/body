{
  byte[] value;
  String hex;
  value=new byte[]{0,1,2,3};
  hex=ByteArrayHelper.toHex(value);
  assertTrue(hex,Arrays.equals(value,ByteArrayHelper.fromHex(hex)));
  value=new byte[]{(byte)0xFF,(byte)0xF1,(byte)0xF2};
  hex=ByteArrayHelper.toHex(value);
  assertTrue(hex,Arrays.equals(value,ByteArrayHelper.fromHex(hex)));
}
