{
  WFSInfo wfs=getWFS();
  wfs.setMaxFeatures(1);
  wfs.setHitsIgnoreMaxFeatures(true);
  getGeoServer().save(wfs);
  Document doc=getAsDOM("wfs?request=GetFeature&typename=cdf:Fifteen" + "&version=1.1.0&service=wfs&resultType=hits");
  XpathEngine xpath=XMLUnit.newXpathEngine();
  assertEquals("15",xpath.getMatchingNodes("//wfs:FeatureCollection/@numberOfFeatures",doc).item(0).getNodeValue());
}
