{
  final String name;
  if (source instanceof ResourceInfo) {
    name=((ResourceInfo)source).getPrefixedName();
  }
 else   if (source instanceof LayerInfo) {
    name=((LayerInfo)source).getResource().getPrefixedName();
  }
 else   if (source instanceof LayerGroupInfo) {
    name=((LayerGroupInfo)source).getName();
  }
 else {
    return null;
  }
  TileLayer tileLayer;
  try {
    tileLayer=tld.getTileLayer(name);
  }
 catch (  GeoWebCacheException notFound) {
    return null;
  }
  if (tileLayer instanceof GeoServerTileLayer) {
    return (GeoServerTileLayer)tileLayer;
  }
  return null;
}
