{
  start("NetworkLink");
  element("name","GWC-" + Layer.getTitle());
  start("Link");
  SimpleFeatureType ft=(SimpleFeatureType)Layer.getFeatureSource().getSchema();
  String type="kml";
  if (FeatureUtilities.isWrappedCoverage(ft) || FeatureUtilities.isWrappedCoverageReader(ft)) {
    type="png";
  }
  String url=ResponseUtils.buildURL(mapContext.getRequest().getBaseUrl(),"gwc/service/kml/" + Layer.getTitle() + "."+ type+ ".kml",null,URLType.SERVICE);
  element("href",url);
  element("viewRefreshMode","never");
  end("Link");
  end("NetworkLink");
}
