{
  NestedRequestSentinel sentinel=new NestedRequestSentinel();
  assertTrue(sentinel.isOutermostRequest());
  sentinel.start();
  assertTrue(sentinel.isOutermostRequest());
  sentinel.start();
  assertFalse(sentinel.isOutermostRequest());
  sentinel.start();
  assertFalse(sentinel.isOutermostRequest());
  sentinel.stop();
  assertFalse(sentinel.isOutermostRequest());
  sentinel.stop();
  assertTrue(sentinel.isOutermostRequest());
  sentinel.stop();
}
