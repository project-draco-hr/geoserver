{
  RuleBuilder ruleBuilder=new RuleBuilder().withId(id).withPosition(position).withMatch(match).withActivation(activation).withParameter(parameter).withRemove(remove).withCombine(combine);
  if (position != null && transform != null) {
    ruleBuilder.withTransform(transform.replace("{PARAMETER}","$2"));
  }
 else {
    ruleBuilder.withTransform(transform);
  }
  return ruleBuilder.build();
}
