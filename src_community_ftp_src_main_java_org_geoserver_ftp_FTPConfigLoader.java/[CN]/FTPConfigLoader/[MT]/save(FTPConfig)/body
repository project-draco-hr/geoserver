{
  Resource configFile;
  OutputStream out=null;
  try {
    configFile=findConfigFile();
    out=configFile.out();
    XStream xs=getPersister();
    xs.toXML(config,new OutputStreamWriter(out,"UTF-8"));
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    if (out != null) {
      try {
        out.close();
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
}
