{
  if (value == null) {
    st.setNull(index,Types.VARCHAR);
  }
 else {
    CoordinateReferenceSystem crs=(CoordinateReferenceSystem)value;
    try {
      st.setString(index,storeAsWKT ? crs.toWKT() : "EPSG:" + CRS.lookupEpsgCode(crs,true));
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
}
