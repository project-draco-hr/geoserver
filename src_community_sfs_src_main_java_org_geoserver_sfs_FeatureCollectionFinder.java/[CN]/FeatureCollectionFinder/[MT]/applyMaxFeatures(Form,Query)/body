{
  String limit=form.getFirstValue("limit");
  if (limit == null) {
    limit=form.getFirstValue("maxfeatures");
  }
  if (limit != null) {
    try {
      query.setMaxFeatures(Integer.parseInt(limit));
    }
 catch (    NumberFormatException e) {
      throw new RestletException("Invalid limit expression: " + limit,Status.CLIENT_ERROR_BAD_REQUEST);
    }
  }
}
