{
  String tolerance=form.getFirstValue("tolerance");
  if (tolerance != null) {
    double tolValue=parseDouble(tolerance,"tolerance");
    if (tolValue < 0) {
      throw new RestletException("Invalid tolerance, it should be zero or positive: " + tolValue,Status.CLIENT_ERROR_BAD_REQUEST);
    }
    return tolValue;
  }
 else {
    return 0d;
  }
}
