{
  try {
    long start=System.currentTimeMillis();
    while (t.isAlive()) {
      if (System.currentTimeMillis() > (start + maxWait)) {
        t.interrupt();
      }
      Thread.currentThread().sleep(20);
    }
  }
 catch (  InterruptedException e) {
    fail("Sometime interrupeted our wait: " + e);
  }
}
