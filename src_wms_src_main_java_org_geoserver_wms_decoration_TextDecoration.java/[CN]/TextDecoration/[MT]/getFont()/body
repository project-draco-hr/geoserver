{
  Font font=DEFAULT_FONT;
  if (fontFamily != null) {
    font=FontCache.getDefaultInstance().getFont(fontFamily);
  }
  if (fontSize > 0) {
    font=font.deriveFont(fontSize);
  }
  if (fontItalic) {
    font=font.deriveFont(Font.ITALIC);
  }
  if (fontBold) {
    font=font.deriveFont(Font.BOLD);
  }
  return font;
}
