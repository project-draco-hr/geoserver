{
  start("NetworkLink");
  String prefixedName=layer.getResource().getPrefixedName();
  element("name","GWC-" + prefixedName);
  start("Link");
  String type=layer.getType() == MapLayerInfo.TYPE_RASTER ? "png" : "kml";
  String url=ResponseUtils.buildURL(request.getBaseUrl(),"gwc/service/kml/" + prefixedName + "."+ type+ ".kml",null,URLType.SERVICE);
  element("href",url);
  element("viewRefreshMode","never");
  end("Link");
  end("NetworkLink");
}
