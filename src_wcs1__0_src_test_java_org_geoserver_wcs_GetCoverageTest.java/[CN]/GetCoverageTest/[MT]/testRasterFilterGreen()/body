{
  String queryString="wcs?sourcecoverage=" + getLayerId(MOSAIC) + "&request=getcoverage"+ "&service=wcs&version=1.0.0&&format=image/tiff&crs=EPSG:4326"+ "&bbox=0,0,1,1&CQL_FILTER=location like 'green%25'&width=150&height=150";
  MockHttpServletResponse response=getAsServletResponse(queryString);
  ImageReader reader=ImageIO.getImageReadersByFormatName("tiff").next();
  reader.setInput(ImageIO.createImageInputStream(getBinaryInputStream(response)));
  RenderedImage image=reader.read(0);
  int[] pixel=new int[3];
  image.getData().getPixel(0,0,pixel);
  assertEquals(0,pixel[0]);
  assertEquals(255,pixel[1]);
  assertEquals(0,pixel[2]);
}
