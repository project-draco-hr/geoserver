{
  MockHttpServletResponse response=getAsServletResponse("wms?request=getmap&service=wms&version=1.1.1" + "&format=" + KMZMapOutputFormat.MIME_TYPE + "&layers="+ getLayerId(MockData.BASIC_POLYGONS)+ ","+ getLayerId(MockData.WORLD)+ "&styles="+ MockData.BASIC_POLYGONS.getLocalPart()+ ","+ "&height=1024&width=1024&bbox=-180,-90,180,90&srs=EPSG:4326&format_options=kmscore:0");
  assertEquals(KMZMapOutputFormat.MIME_TYPE,response.getContentType());
  ByteArrayInputStream bis=getBinaryInputStream(response);
  ZipInputStream zis=new ZipInputStream(bis);
  ZipEntry entry=zis.getNextEntry();
  assertEquals("wms.kml",entry.getName());
  zis.closeEntry();
  entry=zis.getNextEntry();
  assertEquals("images/layer_0.png",entry.getName());
  zis.closeEntry();
  assertNull(zis.getNextEntry());
}
