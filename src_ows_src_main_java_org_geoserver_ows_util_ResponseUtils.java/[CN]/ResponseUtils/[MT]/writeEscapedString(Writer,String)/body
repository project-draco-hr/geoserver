{
  for (int i=0; i < string.length(); i++) {
    char c=string.charAt(i);
    if (c == '<') {
      writer.write("&lt;");
    }
 else     if (c == '>') {
      writer.write("&gt;");
    }
 else     if (c == '&') {
      writer.write("&amp;");
    }
 else     if (c == '\'') {
      writer.write("&apos;");
    }
 else     if (c == '"') {
      writer.write("&quot;");
    }
 else {
      writer.write(c);
    }
  }
}
