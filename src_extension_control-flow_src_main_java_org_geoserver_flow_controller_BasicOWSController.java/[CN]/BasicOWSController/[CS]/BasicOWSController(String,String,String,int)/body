{
  super(queueSize);
  this.service=service;
  this.method=method;
  this.outputFormat=outputFormat;
  if (service == null)   throw new IllegalArgumentException("Invalid OWS definition, service cannot be non null");
 else   if (method == null && outputFormat != null)   throw new IllegalArgumentException("Invalid OWS definition, output format cannot be null if method is not provided");
}
