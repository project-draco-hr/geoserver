{
  super(raster,32,raster.getWidth() * (hasAlpha ? 4 : 3));
  this.pixels=((DataBufferInt)raster.getDataBuffer()).getData();
  this.hasAlpha=hasAlpha;
  if (hasAlpha) {
    bgrOrder=false;
  }
 else {
    bgrOrder=((SinglePixelPackedSampleModel)raster.getSampleModel()).getBitOffsets()[0] != 0;
  }
}
