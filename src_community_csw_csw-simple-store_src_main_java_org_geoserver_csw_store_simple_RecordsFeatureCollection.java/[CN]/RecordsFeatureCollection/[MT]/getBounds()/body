{
  FeatureIterator<Feature> fi=null;
  ReferencedEnvelope bounds=null;
  try {
    fi=features();
    while (fi.hasNext()) {
      Feature f=fi.next();
      ReferencedEnvelope re=ReferencedEnvelope.reference(f.getBounds());
      if (bounds == null) {
        bounds=re;
      }
 else {
        bounds.expandToInclude(re);
      }
    }
  }
  finally {
    if (fi != null) {
      fi.close();
    }
  }
  return bounds;
}
