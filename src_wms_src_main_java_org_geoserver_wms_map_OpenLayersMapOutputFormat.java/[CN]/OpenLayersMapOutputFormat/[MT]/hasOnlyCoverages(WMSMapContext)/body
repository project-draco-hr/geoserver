{
  for (  MapLayer layer : mapContext.getLayers()) {
    FeatureType schema=layer.getFeatureSource().getSchema();
    boolean grid=schema.getName().getLocalPart().equals("GridCoverage") && schema.getDescriptor("geom") != null && schema.getDescriptor("grid") != null && !(layer instanceof WMSMapLayer);
    if (!grid)     return false;
  }
  return true;
}
