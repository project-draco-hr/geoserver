{
  if (source == null) {
    return null;
  }
  Collection<T> copy;
  try {
    copy=source.getClass().newInstance();
  }
 catch (  InstantiationException e) {
    copy=new ArrayList<T>();
  }
  if (deepCopy) {
    for (    T object : source) {
      T objectCopy=clone(object);
      copy.add(objectCopy);
    }
  }
 else {
    copy.addAll(source);
  }
  return copy;
}
