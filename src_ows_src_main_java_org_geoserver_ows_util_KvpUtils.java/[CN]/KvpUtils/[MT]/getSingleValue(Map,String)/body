{
  Object value=kvp.get(key);
  if (value == null) {
    return null;
  }
 else   if (value instanceof String) {
    return (String)value;
  }
 else {
    String[] strings=(String[])value;
    if (strings.length == 0) {
      return null;
    }
    String result=strings[0];
    for (int i=1; i < strings.length; i++) {
      if (!result.equals(strings[i])) {
        throw new ServiceException("Single value expected for request parameter " + key + " but instead found: "+ Arrays.toString(strings));
      }
    }
    return result;
  }
}
