{
  return new CharArrayPasswordEncoder(){
    @Override public boolean isPasswordValid(    String encPass,    char[] rawPass,    Object salt){
      return normalize(encPass) == null && normalize(rawPass) == null;
    }
    @Override public String encodePassword(    char[] rawPass,    Object salt){
      if (normalize(rawPass) == null) {
        return null;
      }
      throw new IllegalArgumentException("Non null/empty password specified");
    }
  }
;
}
