{
  File sdir=storeDir(create,s);
  if (sdir == null) {
    return null;
  }
  if (s instanceof DataStoreInfo) {
    return file(new File(sdir,"datastore.xml"),create);
  }
 else   if (s instanceof CoverageStoreInfo) {
    return file(new File(sdir,"coveragestore.xml"),create);
  }
  return null;
}
