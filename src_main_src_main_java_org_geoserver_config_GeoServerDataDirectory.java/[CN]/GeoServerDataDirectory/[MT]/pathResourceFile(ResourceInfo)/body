{
  StoreInfo store=resource.getStore();
  WorkspaceInfo workspace=store.getWorkspace();
  if (resource instanceof FeatureTypeInfo) {
    return Paths.path("workspaces",workspace.getName(),store.getName(),resource.getName(),"featuretype.xml");
  }
 else   if (resource instanceof CoverageInfo) {
    return Paths.path("workspaces",workspace.getName(),store.getName(),resource.getName(),"coverage");
  }
 else {
    throw new IllegalArgumentException("Unsupported resource " + resource.getName() + " "+ resource.getClass().getName());
  }
}
