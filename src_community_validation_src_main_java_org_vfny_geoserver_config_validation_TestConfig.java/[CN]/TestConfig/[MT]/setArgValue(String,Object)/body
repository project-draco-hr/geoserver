{
  if ((value == null) || value.equals("")) {
    args.remove(name);
    return true;
  }
  ArgumentConfig ac=(ArgumentConfig)args.get(name);
  if (ac == null) {
    ac=new ArgumentConfig();
    ac.setName(name);
    args.put(name,ac);
  }
  if (ac.isFinal()) {
    throw new IllegalArgumentException("Cannot include final arguments as part of a test.");
  }
  ac.setValue(value);
  return true;
}
